{
  "name": "42Context-engine",
  "version": "0.1.0",
  "description": "42Context Engine - MCP server for semantic code search and analysis",
  "main": "dist/src/main.js",
  "bin": {
    "mcp-context-engine": "dist/src/main.js",
    "42context": "dist/src/cli-main.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/src/main.js",
    "cli": "node --expose-gc dist/src/cli-main.js",
    "dev": "tsc && node --watch dist/src/main.js",
    "dev:cli": "tsx --expose-gc src/cli-main.ts",
    "test": "tsc && node --test dist/test/*.js",
    "test:watch": "tsc && node --test --watch",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mcp",
    "context-engine",
    "local-ai",
    "pocketflow",
    "semantic-search"
  ],
  "author": "Development Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/commander": "^2.12.0",
    "@xenova/transformers": "^2.17.2",
    "chokidar": "^3.5.3",
    "chromadb": "^1.10.5",
    "commander": "^14.0.1",
    "tree-sitter": "^0.20.6",
    "tree-sitter-cpp": "^0.20.5",
    "tree-sitter-go": "^0.20.0",
    "tree-sitter-java": "^0.20.2",
    "tree-sitter-javascript": "^0.20.4",
    "tree-sitter-python": "^0.20.4",
    "tree-sitter-rust": "^0.20.4",
    "tree-sitter-typescript": "^0.20.5",
    "uuid": "^13.0.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/chokidar": "^2.1.3",
    "@types/node": "^20.11.0",
    "eslint": "^8.57.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
