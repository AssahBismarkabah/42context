{
  "name": "mcp-local-context-engine",
  "version": "0.1.0",
  "description": "MCP-Based Local Development Context Engine with PocketFlow orchestration",
  "main": "dist/index.js",
  "bin": {
    "mcp-context-engine": "dist/cli-main.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/index.js",
    "dev": "tsc && node --watch dist/index.js",
    "test": "tsc && node --test dist/test/*.js",
    "test:watch": "tsc && node --test --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts test/**/*.ts --ext .ts",
    "lint:fix": "eslint src/**/*.ts test/**/*.ts --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"*.md\" \"*.json\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\" \"*.md\" \"*.json\"",
    "type-check": "tsc --noEmit",
    "lint-and-format": "npm run lint:fix && npm run format",
    "pre-commit": "npm run type-check && npm run lint-and-format"
  },
  "keywords": [
    "mcp",
    "context-engine",
    "local-ai",
    "pocketflow",
    "semantic-search"
  ],
  "author": "Development Team",
  "license": "MIT",
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "chokidar": "^3.5.3",
    "chromadb": "^1.10.5",
    "commander": "^11.1.0",
    "tree-sitter": "^0.20.6",
    "tree-sitter-cpp": "^0.20.5",
    "tree-sitter-go": "^0.20.0",
    "tree-sitter-java": "^0.20.2",
    "tree-sitter-javascript": "^0.20.4",
    "tree-sitter-python": "^0.20.4",
    "tree-sitter-rust": "^0.20.4",
    "tree-sitter-typescript": "^0.20.5",
    "uuid": "^13.0.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/chokidar": "^2.1.3",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
